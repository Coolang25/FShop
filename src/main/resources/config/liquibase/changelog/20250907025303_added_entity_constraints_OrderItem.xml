    <!--
        Added the constraints for entity OrderItem.
    -->
    <changeSet id="20250907025303-2" author="quattt">

        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="order_items"
                                 constraintName="fk_order_items__order_id"
